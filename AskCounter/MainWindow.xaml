<Window x:Class="AskCounter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AskCounter"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="AskCounter" Height="185" Width="300">
    <Grid Background="Black">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <TextBlock x:Name="TxtCounter" Foreground="Red" Margin="10" FontSize="75" HorizontalAlignment="Center">0</TextBlock>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="BtnDown" Background="Black" Foreground="White" Width="85" Margin="5" Click="BtnDown_Click">Count Down</Button>
                <Button x:Name="BtnUp" Background="Black" Foreground="White" Width="85" Margin="5" Click="BtnUp_Click">Count Up</Button>
                <Button x:Name="BtnReset" Background="Black" Foreground="White" Width="85" Margin="5" Click="BtnReset_Click">Reset</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
